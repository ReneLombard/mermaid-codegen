{
  "name": "mermaid-codegen",
  "version": "1.0.0-alpha.5",
  "main": "./dist/index.js",
  "bin": {
    "mermaid-codegen": "./dist/index.js"
  },
  "keywords": [
    "mermaid",
    "codegen",
    "diagrams",
    "javascript"
  ],
  "bugs": {
    "url": "https://github.com/ReneLombard/mermaid-codegen/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ReneLombard/mermaid-codegen.git"
  },
  "scripts": {
    "transform": "node index.js transform -i ./ -o ./output -n HelloWorld",
    "generate": "node index.js generate -i \".\\output\" -o \".\\output\\code\" -t \".\\Templates\\C#\" -n HelloWorld",
    "watch": "node index.js watch -m .\\ -y \".\\output\" -o \".\\output\\code\" --templates \".\\Templates\\C#\" -n HelloWorld",
    "build": "node processJison.js && esbuild index.js --bundle --minify --platform=node --outfile=dist/index.js && cpx \"Templates/**/*\" dist/Templates"
  },
  "license": "MIT",
  "description": "Code generation utilities for Mermaid diagrams",
  "bundleDependencies": [
    "chokidar",
    "commander",
    "handlebars",
    "jison",
    "js-yaml",
    "yamljs"
  ],
  "dependencies": {
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "handlebars": "^4.7.8",
    "jison": "^0.4.18",
    "js-yaml": "^4.1.0",
    "yamljs": "^0.3.0"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "cpx": "^1.2.1",
    "esbuild": "^0.25.2"
  }
}
