{
    "name": "mermaid-codegen-ts",
    "version": "1.0.0",
    "main": "./dist/index.js",
    "bin": {
        "mermaid-codegen": "./dist/index.js"
    },
    "scripts": {
        "build": "npm run process-jison && tsc",
        "process-jison": "node -r ts-node/register processJison.ts",
        "start": "node dist/index.js",
        "dev": "ts-node index.ts",
        "transform": "node dist/index.js transform -i ./mermaid.md -o ../output -n HelloWorld",
        "generate": "node dist/index.js generate -i \"../output\" -o \"../output/code\" -t \"../Templates/C#\"",
        "watch": "node dist/index.js watch -m ./ -y \"../output\" -o \"../output/code\" --templates \"../Templates/C#\" -n HelloWorld"
    },
    "dependencies": {
        "chokidar": "^4.0.3",
        "commander": "^13.1.0",
        "handlebars": "^4.7.8",
        "jison": "^0.4.18",
        "js-yaml": "^4.1.0",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@types/chokidar": "^2.1.3",
        "@types/commander": "^2.12.2",
        "@types/handlebars": "^4.0.40",
        "@types/node": "^24.3.0",
        "@types/yamljs": "^0.2.34",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    }
}
